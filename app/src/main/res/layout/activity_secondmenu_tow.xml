<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <TextView
        style="@style/currency_title_style"
        android:id="@+id/second_menu_title_tow"
        android:text="@string/video_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_huger">

        <LinearLayout
            style="@style/currency_layout_style"
            android:id="@+id/second_menu_left_layout">

            <ImageView
                style="@style/currency_image_style"
                android:id="@+id/left_icon" />

            <TextView
                style="@style/currency_text_style"
                android:id="@+id/left_title" />
        </LinearLayout>

        <LinearLayout
            style="@style/currency_layout_style"
            android:id="@+id/second_menu_right_layout">

            <ImageView
                style="@style/currency_image_style"
                android:id="@+id/right_icon" />

            <TextView
                style="@style/currency_text_style"
                android:id="@+id/right_title" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
